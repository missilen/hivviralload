div(ng-controller="labOrderModalCtrl" style="background-color:#f2f2f2;")
.modal-header
  .modal-body(style='height:105vh;')
    .row(style='background-color:#ffffff; margin:0px;')
      .col-lg-12
      .save-draft-cont(style='position:absolute; float:left; margin-left:-45px;')
            button.btn.btn-default.btn-circle.glyphicon.glyphicon-remove(type="button" ng-click="cancel()")
      .create-new-event-cont
      .h2.h2-create-new|Lab Order
      br
      .hor-line-br
      br
    .row
        .col-lg-12
            h4 {{patientInstance.patientId}}-{{patientInstance.name}}
            //.hor-line-br(style='margin-top:15px;')
            br
    .row
        .col-lg-12
            .well
                form(name='labOrderForm' ng-submit="createLabOrder(labOrderForm.$valid)" class="css-form" )
                    .form-group
                        label Ship Via:
                        select.form-control.input-sm(type='text'  placeholder = 'Shipment Vendor'  ng-options='shipper.shipper_id as shipper.shipper_name for shipper in shipmentVendors' ng-model='labOrderFormData.shipperId')
                    .form-group
                        label Lab Vendor:
                        select.form-control.input-sm(type='text'  placeholder = 'Lab Vendor'  ng-options='labVendor.lab_id as labVendor.lab_name for labVendor in labVendors' ng-model='labOrderFormData.labId')
                    .form-group
                        label Comment:
                        textarea.form-control.input-sm(type="text" placeholder='Comment or special instructions' ng-model='labOrderFormData.comment')
                    button.btn.btn-primary.btn-lg(type='submit', style='width:100%;' ng-disabled="labOrderForm.$invalid") Create

      .row
        .col-lg-12
